.header_top {
  width: 100%;
  position: relative;
  padding: 0.07rem 0;

  .header_content {
    width: 100%;
    position: relative;
    height: 0.3rem;

    .head_item {
      float: right;
    }

    .langs {
      width: 0.3rem;
      margin-right: 0.1rem;

      img {
        width: 100%;
        display: block;
      }
    }

    .nav_wrap_box {
      position: relative;
      z-index: 2;
      height: 0.3rem;
      padding-right: 0.1rem;

      .nav_wrap {
        padding: 0 0.1rem;
        height: 100%;
        width: 0.4rem;
        position: relative;
        right: 0;
        top: 0;
        cursor: pointer;

        .span_box {
          height: 0.16rem;
          position: absolute;
          width: 0.2rem;
          left: 50%;
          margin-left: -11px;
          top: 50%;
          margin-top: -0.08rem;

          span {
            width: 0.2rem;
            position: absolute;
            left: 0;
            height: 2px;
            background: #fff;
            transition();

            &:first-child {
              top: 0;
            }

            &:nth-of-type(2) {
              top: 50%;
              margin-top: -1px;
            }

            &:last-child {
              bottom: 0;
            }
          }
        }
      }
    }

    &.on {
      .nav_wrap_box {
        .nav_wrap {
          .span_box {
            span {
              background: $base-nav-activity-color;

              &:nth-of-type(1) {
                transform: translate3d(0, 0.07rem, 0) rotate(45deg);
              }

              &:nth-of-type(2) {
                opacity: 0;
              }

              &:nth-of-type(3) {
                transform: translate3d(0, -0.07rem, 0) rotate(-45deg);
              }
            }
          }
        }
      }
    }
  }

  .navs_list_wrap {
    position: absolute;
    left: 0;
    right: 0;
    top: 0.44rem;
    margin: auto;

    .navs_list {
      width: 100%;
      background: #000;
      box-shadow: inset 0 14px 15px -15px rgba(236, 93, 71, 0.1), 0 1px 4px 0 rgba(236, 93, 71, 0.1);

      &:before {
        line-top();
      }

      .navs {
        width: 100%;
        position: relative;

        // &:after {
        //   line-left();
        // }

        .tit {
          display: block;
          width: 100%;
          position: relative;
          padding: 0.1rem 0;
          background: #000;
          z-index: 1;
          color: #fff;
          text-align: center;
          font-size: 0.14rem;

          &.router-link-exact-active {
            color: $base-active-color;
          }

          &:before {
            line-bottom();
          }
        }
      }
    }
  }
}