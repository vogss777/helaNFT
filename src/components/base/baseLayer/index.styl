
.common_layer {
  position: relative;
  z-index: 1000;

  .content_mark {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }

  .content_wrap {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 999;

    .vertical_content {
      position: fixed;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      display: flex;
      justify-content: center;
      align-items: center;

      .fime_layer {
        position: relative;
        z-index: 1000;
        overflow: hidden;

        .close {
          position: absolute;
          right: 11px;
          top: 17px;
          ms('width', 20px 22px 24px 26px 28px 29px);
          ms('height', 20px 22px 24px 26px 28px 29px);
        }
      }
    }
  }
}