.base_components_input_layout {
  width: 100%;
  position: relative;

  .input_wrap {
    ms('height', 49px 50px 52px 54px 56px 56px);
    width: 100%;
    position: relative;
    background: rgba(0, 0, 0, 0);
    border-radius: 12px;

    input {
      background: none;
      border: none;
      outline: none;
      width: 100%;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      color: #BFA2DB;
      font-weight: 400;
      ms('font-size', 14px 14px 15px 16px 18px 20px);
      padding: 0 17px;

      &::-webkit-input-placeholder {
        color: #B8B8B8;
        ms('font-size', 14px 14px 15px 16px 18px 20px);
      }

      &::-moz-placeholder {
        color: #B8B8B8;
        ms('font-size', 14px 14px 15px 16px 18px 20px);
      }
    }
  }
}