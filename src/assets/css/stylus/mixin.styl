transition(attribute = all, min = 300ms, animation = ease) {
  transition: attribute min animation;
}

// 不换行
no-wrap() {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

// ------ 超出省略 ------
text-overflow() {
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

line-bottom(color = $base-border-color) {
  height: 2px;
  transform: scaleY(0.25);
  transform-origin: 50% 100%; // 要指定origin值, 要不然会模糊
  content: '';
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: color;
  box-sizing: border-box;
  z-index: 2;
}

line-top(color = $base-border-color) {
  height: 2px;
